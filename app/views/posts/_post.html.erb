<div class='post' id='post_<%= post.id %>'>
    <%= post.content %>
    <div class='timestamp'>
        Posted <%= time_ago_in_words(post.created_at) %> ago.
    </div>
    <% if current_user == @user %>
        <%= link_to "Delete", post, method: :delete, remote: true %>
    <% end %> 
    <div class='comment'>
        <%= render 'comments/comment_form', post: post %>
    </div>
</div>