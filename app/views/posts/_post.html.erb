<div class='post' id='post_<%= post.id %>'>
    <%= post.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
    Post by: <%= post.user.name %>
    <div class='timestamp'>
        Posted <%= time_ago_in_words(post.created_at) %> ago.
    </div>
    <div class='total_likes'>
        <% if !post.likes.empty? %>
            Likes: <%= post.likes.count %>
        <% end %>
    </div>
    <div class='like_unlike'>
        <% if !post.likes.exists?(user_id: current_user) %>
            <%= render 'likes/like', post: post  %>
        <% else %>
            <%= render 'likes/unlike', post: post %>
        <% end %>
    </div>
    <% if current_user == @user %>
        <%= link_to "Delete", post, method: :delete, remote: true %>
    <% end %> 
    <% if !@comments.empty? %>
    <div class='comment'>
        <%= render 'comments/comment_form', post: post %>
    </div>
    <% end %>
</div>

<div class='comments' id='post_<%= post.id %>_comments'>
    <%= render @comments, post: post %>
</div>