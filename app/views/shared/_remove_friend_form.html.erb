<%= form_for(current_user.friendships.find_by(friend_id: user.id), 
        html: { method: :delete }, data: { confirm: "You sure?" }, remote: true) do |f| %>
    <%= hidden_field_tag :friend_id, {:value => user.id} %>
    <%= f.submit "Remove friend", class: 'remove friend-button btn btn-primary' %>
<% end %>